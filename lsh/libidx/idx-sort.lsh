#? *** IDX sorting and binary search functions
;; sorting and bsearch functions for vectors of doubles, floats, and ints.
;; These functions only work properly with contiguous vectors.

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

#? (idx-f1bsearch <am> <v>)
;; returns index of element in idx1 of float <am>
;; whose value is less than or equal to <v>
;; using a binary search.
;; this assumes the elements in <am> are sorted
;; in ascending order.
(de idx-f1bsearch (am v)
    ((-float-) v)
    ((-idx1- (-float-)) am)
    (when (<> 1 (idx-modulo am 0)) (error "vector is not contiguous"))
    (let ((m (idx-dim am 0))
	  (lo 0))
      ((-int-) m lo)
      #{{
      int hi, n;
      float *a;
      a = IDX_PTR($am, float);
      hi = $m;
      while (hi- $lo>1) {
        n = ( $lo + hi )/2;
        if ( $v >= a[n] ) $lo = n; else hi = n;
      }
      } #}
      lo))

