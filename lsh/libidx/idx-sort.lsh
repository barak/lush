#? (idx-f1sortup <m>)
;; sorts element in float vector <m> in ascending order
(de idx-f1sortup (m)
    ((-idx1- (-float-)) m)
    (when (<> 1 (idx-modulo m 0)) (error "vector is not contiguous"))
    (let ((n (idx-dim m 0)))
      ((-int-) n)
      (when (> n 1)
      #{ {
      int l,j,ir,i;
      float *ra, rra;

      ra = (float*)(IDX_PTR($m, float)) -1;
      l=($n >> 1)+1;
      ir= $n;
      for (;;) {
	   if (l > 1)
	      rra=ra[--l];
	    else {
	      rra=ra[ir];
	      ra[ir]=ra[1];
	      if (--ir == 1) {
	        ra[1]=rra;
		goto end; }}
        i=l;
	j=l << 1;
	while (j <= ir) {
	  if (j < ir && ra[j] < ra[j+1]) ++j;
	  if (rra < ra[j]) {
	    ra[i]=ra[j];
	    j += (i=j);
	    } else j=ir+1; }
        ra[i]=rra; }}
	end:  #}
	)
      ()))

